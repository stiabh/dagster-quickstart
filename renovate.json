{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":automergePatch",
        ":semanticCommits",
        ":semanticCommitTypeAll(chore)"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "groupName": "Patch"
        },
        {
            "matchUpdateTypes": [
                "minor"
            ],
            "groupName": "Minor"
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "groupName": "Major"
        },
        {
            "matchManagers": [
                "python-version"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "enabled": true
        },
        {
            "matchManagers": [
                "python-version"
            ],
            "matchUpdateTypes": [
                "minor",
                "major"
            ],
            "enabled": false
        }
    ],
    "customManagers": [
        {
            "customType": "jsonata",
            "fileFormat": "toml",
            "managerFilePatterns": [
                "**/pyproject.toml"
            ],
            "matchStrings": [
                "tool.uv.{ \"depName\": \"uv\", \"currentValue\": $replace($string($.'required-version'), '\"', '') }"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "astral-sh/uv",
            "extractVersionTemplate": "^v?(?<version>.*)$"
        }
    ]
}